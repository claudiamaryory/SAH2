
<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()"></button>
         <h3>Datos Empleados</h3>
    </div>

    <div class="modal-body">
     
        <p id="notice"><%= notice %></p>

        <p><%= image_tag @empleado.imagen.url(:small) %></p><!--codigo de la imagen-->
        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Nombre: </b></td>
               <td><%= @empleado.nombre %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Identificacion: </b></td>
               <td><%= @empleado.apellido %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Direccion: </b></td>
               <td><%= @empleado.documento %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Telefono: </b></td>
               <td><%= @empleado.telefono %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Celular: </b></td>
               <td><%= @empleado.celular %></td>
            </tr>
            
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>