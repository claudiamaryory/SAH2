
<%= simple_form_for([@cliente,@solicitud_servicio], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>



  <%= f.error_notification %>
  <div class="responsive">
      
       <!--<div class="control-group"> -->
          <%= f.input :direccion, :label => "Direccion",  :required => true %>
          <div  id="camp">
          <%= f.label :barrio %>
          <%= f.collection_select :barrio_id, Barrio.all, :id, :nombre, :order => 'nombre' %>
           </div>
        <br>

          <%= f.input :telefono, :label => "Telefono",  :required => true %>
          <%= f.label :interesado %>
          <%= f.collection_select :ofertado_id, Ofertado.all, :id,:nombre, :order => 'nombre', :required => true %><br><br>

          <%= f.label :observaciones %><br><!--cambiar la el tamaÃ±o del cuadro de observacion-->
         <%= f.text_area(:observaciones, :rows => 5 )%>
          <div class="form-actions">
            <%= f.submit "guardar", :class => 'btn btn-primary' %>
            <%= link_to 'Atras', cliente_solicitudes_servicios_path(@cliente), :class => 'btn btn-small' %>
          </div>
        <!-- </div> -->
      </div>
  </div>    
<% end %>

