<%- model_class = Servicio -%>
<div class="page-header">
  <center><h1>Orden de Servicios para los TÃ©cnicos</h1></center>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>fecha</th>
      <th>hora</th>
      <th>empleado</th>
      <th>solicitud de servicio</th>
      <th>cliente</th>
      <th>Estado</th>
     
    </tr>
  </thead>
  <tbody>
    <% @servicios.each do |servicio| %> <!--realizando un ciclo para imprimir los valores del variable servicios-->
          <tr id=<%= "servicio_#{servicio.id}" %>>
            <td><%= servicio.fecha %></td>
            <td><%= servicio.hora %></td>
            <td><%= servicio.empleado.nombre%> <%= servicio.empleado.apellido%></td>
            <td><%= servicio.solicitud_servicio.ofertado.nombre %></td>
            <td><%= servicio.cliente.nombre %> <%= servicio.cliente.apellido%></td>
            <td><%= servicio.estado.nombre %></td>
          </tr>

      <% end %>
  </tbody>
  
</table>

   

