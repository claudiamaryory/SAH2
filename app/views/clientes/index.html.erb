<%- model_class = Cliente -%>
<div class="page-header">
 <center><h1>Clientes</h1></center>

<!--codigo del buscador-->
<%= form_tag request.path, :method => 'get' do %>
Nombre Cliente a Buscar:
<div class="imput-append">
  <%= search_field_tag :search, params[:search],options={:class=>"span2", :placeholder => "Cliente"}  %>
    <%= submit_tag "Consultar", options={ :class => "btn btn-info", :nombre => nil} %>
</div>
<p>numero de registros:
  <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>

<% end %>

<br />

</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Documento</th>
      <th>Direccion</th>
      <th>Barrio</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @clientes %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Cliente', new_cliente_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br/>
<br/><!--codigo de la paginacion-->
<div align="center"> 
<%= will_paginate @clientes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<td> 
Total Clientes :<input type="text"  id="totalregs" class="span1" value="<%= @clientes.total_entries %>" readonly />
</td>
